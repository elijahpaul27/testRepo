@model DaebakRealEstate.Models.SecondPageModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<!-- Main Container -->
<div class="d-flex vh-100">

    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column justify-content-between">
        <!-- Logo -->
        <div class="text-center mb-4">
            <img src="~/images/daebak_logo.png" alt="Logo" class="logo-img">
        </div>

        <!-- Navigation Links -->
        <nav class="d-flex flex-column">
            <a asp-controller="Home" asp-action="Index" class="nav-item">HOME</a>
            <a asp-controller="Management" asp-action="Management" class="nav-item">MANAGEMENT</a>
            <a asp-controller="Notifications" asp-action="Index" class="nav-item">NOTIFICATIONS</a>
            <a asp-controller="Settings" asp-action="Index" class="nav-item">SETTINGS</a>
        </nav>

        <!-- Logout Button -->
        <a asp-controller="Account" asp-action="Logout" class="nav-item logout">LOGOUT</a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- You can still put content here if needed -->
    </div>

</div>

<!-- Styles -->
<style>
    /* General Layout */
    body, html {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        overflow: hidden; /* Prevent scrolling */
        background: url('/images/HOME5.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    /* Sidebar with Glassmorphism Effect */
    .sidebar {
        width: 250px; /* Adjust as needed */
        height: 100vh;
        background: linear-gradient(to right, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.5)); /* Transparent to white */
        backdrop-filter: blur(10px); /* Glass effect */
        -webkit-backdrop-filter: blur(10px); /* For Safari */
        border-right: 1px solid rgba(255, 255, 255, 0.2); /* Subtle border */
        padding: 20px 15px;
        box-shadow: 5px 0 15px rgba(0, 0, 0, 0.2);
        position: fixed;
        left: 0;
        top: 0;
    }

    .logo-img {
        width: 120px;
    }

    /* Navigation Links */
    .nav-item {
        text-decoration: none;
        color: white;
        padding: 12px;
        border-radius: 8px;
        text-align: center;
        font-weight: bold;
        margin-bottom: 10px;
        transition: background 0.3s ease-in-out, transform 0.2s ease;
        display: block;
        background: rgba(255, 255, 255, 0.2); /* Semi-transparent */
    }

        .nav-item:hover, .nav-item.active {
            background: rgba(255, 255, 255, 0.4); /* Lighter effect */
            transform: scale(1.05);
            color: #2c3e50;
        }

    .logout {
        background: rgba(255, 50, 50, 0.4); /* Soft red */
        padding: 12px;
        text-align: center;
        color: white;
        font-weight: bold;
        border-radius: 8px;
        margin-top: auto;
        transition: background 0.3s ease-in-out, transform 0.2s ease;
    }

        .logout:hover {
            background: rgba(255, 50, 50, 0.6);
            transform: scale(1.05);
        }

    /* Main Content */
    .main-content {
        margin-left: 250px; /* Push content right so sidebar doesn't overlap */
        flex-grow: 1;
        text-align: center;
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

</style>
