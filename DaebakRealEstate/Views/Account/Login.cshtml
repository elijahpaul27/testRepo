@model LoginViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Login - Daebak";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Font Awesome (Replaces Phosphor Icons) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap">
</head>
<body class="font-sans bg-cover bg-center min-h-screen" style="background-image: url('/images/daebak_bg.jpg');">
    <div class="flex w-full h-screen overflow-hidden">

        <!-- Left Side -->
        <div class="hidden md:flex md:w-3/5 relative flex-col items-center justify-center p-12 bg-primary/20">
            <h1 class="text-white text-center">
                <span class="text-6xl font-bold">DAEBAK</span>
                <span class="text-3xl px-2 font-light">|</span>
                <span class="text-3xl font-normal">YOUR DREAM <br> HOME AWAITS</span>
            </h1>
            <div class="mt-3 w-20 h-1 bg-white mx-auto rounded-full"></div>
        </div>

        <!-- Right Side -->
        <div class="w-full md:w-2/5 bg-white flex flex-col items-center justify-center p-8 relative shadow-lg rounded-xl">
            <h2 class="bg-primary text-white px-6 py-3 rounded-lg text-lg font-bold">WELCOME BACK</h2>
            <img src="@Url.Content("~/images/daebak_logo.png")" alt="Login your account" class="w-40 mt-4 opacity-90" />

            <!-- Login Form -->
            <form asp-action="Login" asp-controller="Account" method="post"
                  class="space-y-6 bg-white/80 p-6 rounded-xl backdrop-blur-md shadow-md w-full max-w-sm mt-6">
                <div>
                    <label asp-for="Username" class="block text-sm font-medium text-tertiary mb-1">Username</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-gray-500">
                            <i class="fa-solid fa-user"></i> <!-- Font Awesome Icon -->
                        </span>
                        <input asp-for="Username" type="text" required
                               class="w-full pl-10 pr-4 py-3 bg-gray-100 rounded-full focus:outline-none focus:ring-2 focus:ring-primary focus:bg-white transition duration-200">
                    </div>
                    <span asp-validation-for="Username" class="text-red-500 text-xs mt-1 block"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-tertiary mb-1">Password</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-gray-500">
                            <i class="fa-solid fa-lock"></i> <!-- Font Awesome Icon -->
                        </span>
                        <input asp-for="Password" type="password" required
                               class="w-full pl-10 pr-4 py-3 bg-gray-100 rounded-full focus:outline-none focus:ring-2 focus:ring-primary focus:bg-white transition duration-200">
                    </div>
                    <span asp-validation-for="Password" class="text-red-500 text-xs mt-1 block"></span>
                    <div class="flex justify-end mt-2">
                        <a href="@Url.Action("ForgotPassword", "Account")" class="text-sm text-gray-600 hover:text-secondary transition duration-200 underline">
                            Forgot Password?
                        </a>
                    </div>
                </div>

                <div class="text-red-500 font-medium text-sm text-center">
                    <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
                </div>

                <!-- Fixed Login Button -->
                <button type="submit" class="w-full bg-primary text-black rounded-full py-3 font-medium shadow-md hover:bg-secondary transition duration-200 text-lg tracking-wide">
                    LOGIN
                </button>

            </form>

            <div class="text-center mt-8">
                <p class="text-sm text-gray-500">
                    Don't have an account? <a href="@Url.Action("Contact", "Account")" class="text-primary hover:underline">Contact the admin</a>
                </p>
            </div>
        </div>
    </div>

    <!-- Validation Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
