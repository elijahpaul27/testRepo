@model DaebakRealEstate.Models.UserViewModel

@{
    ViewData["Title"] = "Add New User";
}

<style>
    /* Background Styling */
    body {
        background: url('/images/HOME6.jpg') no-repeat center center/cover;
        font-family: 'Poppins', sans-serif;
    }

    /* 🔹 Change Glassmorphism to Solid White */
    .glass-card {
        background: white; /* Solid white background */
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        border: 1px solid rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    /* Form Inputs */
    .custom-input {
        background: white; /* Make input fields white */
        border: 1px solid #ccc;
        border-radius: 8px;
        color: black;
        padding: 10px;
        font-size: 14px;
    }

        .custom-input::placeholder {
            color: gray;
        }

        .custom-input:focus {
            outline: none;
            border-color: #68D2E8;
            box-shadow: 0 0 10px rgba(104, 210, 232, 0.5);
        }

    /* Labels */
    .form-label {
        font-weight: bold;
        color: black; /* Ensure labels are readable */
    }

    /* Buttons */
    .btn-custom {
        background-color: #009879;
        color: white;
        border-radius: 8px;
        padding: 10px 15px;
        transition: 0.3s ease-in-out;
        font-weight: bold;
    }

        .btn-custom:hover {
            background-color: #0b6ba8;
        }

    .btn-light {
        background-color: #f1f1f1;
        color: black;
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 10px 15px;
        transition: 0.3s ease-in-out;
    }

        .btn-light:hover {
            background-color: #e0e0e0;
        }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="glass-card">
                <h2 class="text-center text-dark">Add New User</h2> <!-- Changed text-white to text-dark -->
                <form asp-action="AddUser" method="post">
                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input type="text" asp-for="Username" class="form-control custom-input" required placeholder="Enter username">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">First Name</label>
                        <input type="text" asp-for="FirstName" class="form-control custom-input" required placeholder="Enter first name">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Last Name</label>
                        <input type="text" asp-for="LastName" class="form-control custom-input" required placeholder="Enter last name">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" asp-for="Email" class="form-control custom-input" required placeholder="Enter email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phone Number</label>
                        <input type="text" asp-for="PhoneNumber" class="form-control custom-input" placeholder="Enter phone number">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">House Number</label>
                        <input type="text" asp-for="HouseNumber" class="form-control custom-input" placeholder="Enter house number">
                        <span asp-validation-for="HouseNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        <select asp-for="Role" class="form-control custom-input">
                            <option value="Homeowner">Homeowner</option>
                            <option value="Staff">Staff</option>
                            <option value="Admin">Admin</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" asp-for="Password" class="form-control custom-input" required placeholder="Enter password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Confirm Password</label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control custom-input" required placeholder="Confirm password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-custom">Add User</button>
                        <a asp-action="UserList" class="btn btn-light">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
